<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_500"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imgDisplayPicture"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:src="@drawable/profile"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150sp"
        android:text="@string/person_name"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190sp"
        android:text="@string/person_email"
        android:textColor="@color/white"
        android:textSize="25sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/txtMyAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="315sp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:text="@string/my_account"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck,UseCompatTextViewDrawableXml" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="360sp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/txtSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="380sp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:text="@string/support"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck,UseCompatTextViewDrawableXml" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="430sp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/txtPrivacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="450sp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:text="@string/privacy_policy"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck,UseCompatTextViewDrawableXml" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="495sp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/txtTermsAndConditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="515sp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:text="@string/terms_and_conditions"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/txtAppVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610sp"
        android:text="@string/version"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck,UseCompatTextViewDrawableXml" />

</RelativeLayout>