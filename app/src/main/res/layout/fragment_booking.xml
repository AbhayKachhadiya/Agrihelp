<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/orange_500"
    tools:context=".BookingFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230sp"
        app:cardCornerRadius="20sp"
        android:layout_margin="10sp"
        app:cardElevation="30sp">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            app:iss_delay="0"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdContactForm"
        android:layout_width="360sp"
        android:layout_height="510sp"
        android:layout_gravity="center"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="300sp"
        android:layout_marginBottom="25sp"
        android:layout_marginHorizontal="25sp"
        app:cardElevation="15sp">

        <TextView
            android:id="@+id/txtContactForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20sp"
            android:gravity="center"
            android:text="@string/booking_form"
            android:textColor="@color/orange_500"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck,TextContrastCheck" />

        <EditText
            android:id="@+id/txtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="164sp"
            android:autofillHints=""
            android:backgroundTint="@color/orange_500"
            android:hint="@string/full_name"
            android:inputType="text"
            android:textColorHint="@color/orange_500"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />


        <EditText
            android:id="@+id/txtPincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="230sp"
            android:autofillHints=""
            android:backgroundTint="@color/orange_500"
            android:hint="@string/pincode"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColorHint="@color/orange_500"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/txtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="295sp"
            android:autofillHints=""
            android:backgroundTint="@color/orange_500"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textColorHint="@color/orange_500"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/txtQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="360sp"
            android:autofillHints=""
            android:backgroundTint="@color/orange_500"
            android:hint="@string/crop_name"
            android:minHeight="48dp"
            android:inputType="text"
            android:textColorHint="@color/orange_500"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="75sp"
            android:layout_marginTop="440sp"
            android:backgroundTint="@color/green_500"
            android:text="@string/submit"
            android:textColor="#ffffff"
            android:textSize="19sp"
            tools:ignore="TextContrastCheck" />


    </androidx.cardview.widget.CardView>


</RelativeLayout>
</ScrollView>