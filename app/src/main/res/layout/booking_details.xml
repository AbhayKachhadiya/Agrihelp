<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".BookingHistoryFragment">

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:elevation="50sp"
        android:src="@drawable/ic_leaf"
        tools:ignore="ContentDescription" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crdDetails"
        android:layout_width="320sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginVertical="30sp"
        android:elevation="0sp"
        app:cardCornerRadius="10sp"
        app:cardElevation="10sp">

        <TextView
            android:id="@+id/txtServiceName"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="30sp"
            android:inputType="text"
            android:text="@string/services"
            android:textColor="@color/orange_500"
            android:textSize="20sp"
            tools:ignore="TextViewEdits,TouchTargetSizeCheck,TextSizeCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/txtRentalPrice"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="30sp"
            android:text="@string/price"
            android:textColor="@color/orange_500"
            android:textSize="17sp"
            tools:ignore="TextSizeCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="75sp"
            android:inputType="text"
            android:text="@string/purchase_date"
            android:textColor="@color/orange_500"
            android:textSize="15sp"
            tools:ignore="TextViewEdits,TouchTargetSizeCheck,TextSizeCheck,TextContrastCheck" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5sp"
            android:layout_marginTop="110sp"
            android:background="@color/light_gray" />


        <TextView
            android:id="@+id/txtCropName"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="160sp"
            android:inputType="text"
            android:text="@string/crop"
            android:textColor="@color/orange_500"
            android:textSize="17sp"
            tools:ignore="TextViewEdits,TouchTargetSizeCheck,TextSizeCheck,TextContrastCheck" />


        <TextView
            android:id="@+id/txtPincode"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="125sp"
            android:inputType="text"
            android:text="@string/pin"
            android:textColor="@color/orange_500"
            android:textSize="17sp"
            tools:ignore="TextViewEdits,TouchTargetSizeCheck,TextSizeCheck,TextContrastCheck" />


        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="145sp"
            android:inputType="text"
            android:text="@string/status"
            android:textColor="@color/orange_500"
            android:textSize="17sp"
            tools:ignore="TextViewEdits,TouchTargetSizeCheck,TextSizeCheck,TextContrastCheck" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>

